    ]

section.section.latest-news
    .site-container
        .latest-news__wrapper
            +title('icon__document-signed', 'Последние новости')
            .swiper.latest-news__slider
                .swiper-wrapper.latest-news__slider-list
                    each item in latestNews
                        .swiper-slide.latest-news__slider-item
                            .latest-news__slider-item-contain
                                img.latest-news__slider-item-img(src=item.imgUrl alt='')
                                .latest-news__slider-item-date 24.07 #[span 2024]
                            .latest-news__slider-item-info
                                h5.latest-news__slider-item-info-title
                                    a(href="/open-news.html")= item.title
                                .latest-news__slider-item-info-desc= item.text
                                ul.latest-news__slider-item-info-tags
                                    li.latest-news__slider-item-info-tag Фестиваль
                                    li.latest-news__slider-item-info-tag Конкурс
                                    li.latest-news__slider-item-info-tag Иностранный язык
            +button('a', 'btn--transparent latest-news__btn', 'Все новости', '/tisbi-nauka/tisbi-nauka/news.html', '', 'icon__angle-small-right-white')

